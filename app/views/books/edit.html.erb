 <div class=base>
   <div class="contact-form">
     <%= form_with(model: @book, url: "/books/#{@book.id}", local: true) do |f| %>
     <div class=box>
       <h2 class=form-name>EDIT REGISTRATION BOOK</h2>
       <div class="image_field">
         <%= f.label :image, 'Previous Image', class: "image_label"%><br>
         <%= image_tag @book.image.url, size: "120x130", class: "image_file" %>
         <br>
         <%= f.file_field :image, value: @book.image %>
       </div>
       <div class="book_name_block">
         <%= f.label :name, 'Book Name'%><br>
         <%= f.text_field :name, placeholder: "", value: @book.name, class: "book-name_field"%>
       </div>
       <div class="book_review_block">
         <%= f.label :text, 'Book details', class: "review_label"%><br>
         <%= f.text_area :text, placeholder: "", value: @book.text, class: "book-review_area" %>
       </div>
       <div class=review_submit_box>
         <div>
           <%= f.submit "編集する", class: "review_submit" %>
         </div>
       </div>
     </div>
     <% end %>
     <div>
     </div>