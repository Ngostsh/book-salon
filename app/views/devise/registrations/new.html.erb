<div class = user_base>
<div class = user_box>
<h2>新規登録</h2>
<br>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

   <div class="image_field">
    <%= f.label :image, 'ユーザー画像', class: "image_label"%><br>
    <%= f.file_field :image %>
    </div>

  <div class="field">
    <%= f.label :nick_name, 'ニックネーム（２０文字以内）'%><br>
    <%= f.text_field :nick_name, class: "user_input", autofocus: true, autocomplete: "nick_name" %>
  </div>

  <div class="field">
    <%= f.label :email, 'メールアドレス（●●●@●●●.●●● という形式で入力して下さい）' %><br />
    <%= f.email_field :email, class: "user_input", autofocus: true, autocomplete: "email" %>
  </div>

    <div class="field">
  <%= f.label :profile, 'プロフィール（１０００文字以内）'%><br>
  <%= f.text_area :profile, placeholder: "", value: "プロフィールを入力してください", class: "user_input_profile" %>

  <div class="field">
    <%= f.label :password, 'パスワード' %>
    <% if @minimum_password_length %>
    <span>(<%= @minimum_password_length %> 文字以上、半角英数字の両方が含まれるもの)</span>
    <% end %><br />
    <%= f.password_field :password, class: "user_input", autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, 'パスワードの確認' %><br />
    <%= f.password_field :password_confirmation, class: "user_input", autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= button_tag type: "submit", class: "user_login" do %>
    <i class="fas fa-user-plus"></i>新規登録
    <% end %>
  </div><br>
<% end %>

<%= render "devise/shared/links" %>
<br>
<a href="/books">トップページへ戻る</a>
</div>
</div>
