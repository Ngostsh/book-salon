<div class = user_base>
<div class = user_box>
<h2>新規登録</h2>
<br>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :nick_name, 'ニックネーム'%><br>
    <%= f.email_field :nick_name, class: "user_input", autofocus: true, autocomplete: "nick_name" %>
  </div>

  <div class="field">
    <%= f.label :email, 'メールアドレス' %><br />
    <%= f.email_field :email, class: "user_input", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, 'パスワード' %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, class: "user_input", autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, 'パスワードの確認' %><br />
    <%= f.password_field :password_confirmation, class: "user_input", autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div><br>
<% end %>

<%= render "devise/shared/links" %>
<br>
<a href="/reviews">トップページへ戻る</a>
</div>
</div>
