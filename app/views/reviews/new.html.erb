 <div class=base>
 <div class="contact-form">
  <%= form_with(model: @review, url: '/reviews', local: true) do |f| %>
 <div class=box>
 <h2 class=form-name>NEW BOOK REVIEW</h2>
   <div class="image_field">
    <%= f.label :image, 'Book Image', class: "image_label"%><br>
    <%= f.file_field :image %>
    </div>
  <div class = "book_name_block">
    <%= f.label :name, 'Book Name(40 characters or less)'%><br>
    <%= f.text_field :name, placeholder: "", value: "", class: "book-name_field"%>
  </div>
  <div class = "book_review_block">
  <%= f.label :text, 'Book Review(650 characters or less)'%><br>
    <%= f.text_area :text, placeholder: "", value: "", class: "book-review_area" %>
  </div>
  <div class= review_submit_box >
  <div>
    <%= f.submit "投稿する", class: "review_submit" %>
  </div>
  </div>
  </div>
  <% end %>
  <div>
</div>